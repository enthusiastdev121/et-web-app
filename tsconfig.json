{
  "typeRoots": ["./node_modules/@types/"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/theme/*": ["theme/*"],
      "@/utils/*": ["utils/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/network/apis/auth.js", "src/styles/Typography.js", "src/containers/message/AudioPlay.js", "src/components/signupNew/signupSteps/socialAccount"],
  "exclude": ["node_modules"]
}
